# Alternative license arrangements possible, contact me for more information

{
echo "::respawn:/usr/sbin/syslogd -r -f /run/syslog.conf -n"

flat ${BASEDIR}/etc/providers.json | awk -F. '{ print $1 }' | sort -u | \
	awk '{ printf "::respawn:/usr/local/bin/start_wsgi_epprest 1 %s\n",$0 }'

echo "::respawn:/usr/local/bin/start_nginx"
} > /run/inittab
