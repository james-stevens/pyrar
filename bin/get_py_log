set -x
. /run/policy_subst/env.inc
if test "${FACILITY_PYTHON}"
	then
		lvl="info"
		if test "${LOGLEVEL_PYTHON}"
			then
				lvl="${LOGLEVEL_PYTHON}"
			fi
		fac="${FACILITY_PYTHON}"
		extra="--log-syslog --log-syslog-to udp://127.0.0.1:514"
		extra="${extra} --log-syslog-facility ${fac} --log-level ${lvl}"
	fi
