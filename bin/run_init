if test "${SYSLOG_SERVER}"
	then
		echo "*.* @${SYSLOG_SERVER}"
	else
		echo "*.* -/dev/console"
	fi > /run/syslog.conf

export BASEDIR="/usr/local/pyrar"
/usr/local/bin/make_inittab

if test -d /etc/start.d
	then
		for file in /etc/start.d/*
			do
				. ${file}
			done
	fi


exec /sbin/init
